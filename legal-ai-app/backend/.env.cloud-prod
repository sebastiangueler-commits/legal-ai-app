# Cloud Production Environment Configuration
DEBUG=False
HOST=0.0.0.0
PORT=8000

# JWT Configuration
JWT_SECRET=cloud-prod-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (Cloud PostgreSQL)
DATABASE_URL=postgresql://username:password@cloud-prod-host:5432/legal_ai_prod

# Redis Configuration (Cloud Redis)
REDIS_URL=redis://cloud-prod-host:6379

# Google Drive API Configuration
GOOGLE_DRIVE_CLIENT_ID=your-cloud-prod-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-cloud-prod-client-secret
GOOGLE_DRIVE_CREDENTIALS_FILE=cloud_prod_credentials.json

# AI Model Configuration
OPENAI_API_KEY=your-cloud-prod-openai-key
ANTHROPIC_API_KEY=your-cloud-prod-anthropic-key

# Model Paths
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
FAISS_INDEX_PATH=./ml_models/cloud_prod_faiss_index.bin
CLASSIFIER_MODEL_PATH=./ml_models/cloud_prod_legal_classifier.pkl

# Cloud Production Settings
LOG_LEVEL=INFO
ENABLE_DEBUG_ENDPOINTS=False
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ENABLE_METRICS=True
ENABLE_HEALTH_CHECKS=True
ENABLE_RATE_LIMITING=True
RATE_LIMIT_PER_MINUTE=100