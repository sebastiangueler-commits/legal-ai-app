# Cloud Production Environment Configuration
DEBUG=False
HOST=0.0.0.0
PORT=8000

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_VERY_SECURE_RANDOM_STRING_IN_CLOUD
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (Cloud PostgreSQL)
DATABASE_URL=postgresql://username:password@cloud-host:5432/legal_ai_production

# Redis Configuration (Cloud Redis)
REDIS_URL=redis://cloud-host:6379

# Google Drive API Configuration
GOOGLE_DRIVE_CLIENT_ID=your-cloud-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-cloud-client-secret
