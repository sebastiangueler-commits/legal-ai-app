# Production Environment Configuration
DEBUG=False
HOST=0.0.0.0
PORT=8000

# JWT Configuration
JWT_SECRET=prod-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/legal_ai_production

# Redis Configuration (Redis)
REDIS_URL=redis://host:6379

# Google Drive API Configuration
GOOGLE_DRIVE_CLIENT_ID=your-prod-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-prod-client-secret
GOOGLE_DRIVE_CREDENTIALS_FILE=prod_credentials.json

# AI Model Configuration
OPENAI_API_KEY=your-prod-openai-key
ANTHROPIC_API_KEY=your-prod-anthropic-key

# Model Paths
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
FAISS_INDEX_PATH=./ml_models/prod_faiss_index.bin
CLASSIFIER_MODEL_PATH=./ml_models/prod_legal_classifier.pkl

# Production Settings
LOG_LEVEL=INFO
ENABLE_DEBUG_ENDPOINTS=False
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ENABLE_METRICS=True
ENABLE_HEALTH_CHECKS=True
ENABLE_RATE_LIMITING=True
RATE_LIMIT_PER_MINUTE=100
ENABLE_SWAGGER_UI=False