# Cloud Development Environment Configuration
DEBUG=True
HOST=0.0.0.0
PORT=8000

# JWT Configuration
JWT_SECRET=cloud-dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database Configuration (Cloud PostgreSQL)
DATABASE_URL=postgresql://username:password@cloud-dev-host:5432/legal_ai_dev

# Redis Configuration (Cloud Redis)
REDIS_URL=redis://cloud-dev-host:6379

# Google Drive API Configuration
GOOGLE_DRIVE_CLIENT_ID=your-cloud-dev-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-cloud-dev-client-secret
GOOGLE_DRIVE_CREDENTIALS_FILE=cloud_dev_credentials.json

# AI Model Configuration
OPENAI_API_KEY=your-cloud-dev-openai-key
ANTHROPIC_API_KEY=your-cloud-dev-anthropic-key

# Model Paths
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
FAISS_INDEX_PATH=./ml_models/cloud_dev_faiss_index.bin
CLASSIFIER_MODEL_PATH=./ml_models/cloud_dev_legal_classifier.pkl

# Cloud Development Settings
LOG_LEVEL=DEBUG
ENABLE_DEBUG_ENDPOINTS=True
CORS_ORIGINS=https://dev.yourdomain.com,http://localhost:3000
ENABLE_METRICS=True
ENABLE_HEALTH_CHECKS=True