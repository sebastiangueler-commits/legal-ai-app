# Staging Environment Configuration
DEBUG=False
HOST=0.0.0.0
PORT=8000

# JWT Configuration
JWT_SECRET=staging-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=45

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@staging-host:5432/legal_ai_staging

# Redis Configuration (Redis)
REDIS_URL=redis://staging-host:6379

# Google Drive API Configuration
GOOGLE_DRIVE_CLIENT_ID=your-staging-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-staging-client-secret
GOOGLE_DRIVE_CREDENTIALS_FILE=staging_credentials.json

# AI Model Configuration
OPENAI_API_KEY=your-staging-openai-key
ANTHROPIC_API_KEY=your-staging-anthropic-key

# Model Paths
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
FAISS_INDEX_PATH=./ml_models/staging_faiss_index.bin
CLASSIFIER_MODEL_PATH=./ml_models/staging_legal_classifier.pkl

# Staging Settings
LOG_LEVEL=WARNING
ENABLE_DEBUG_ENDPOINTS=False
CORS_ORIGINS=https://staging.yourdomain.com
ENABLE_METRICS=True
ENABLE_HEALTH_CHECKS=True
ENABLE_RATE_LIMITING=True
RATE_LIMIT_PER_MINUTE=200
ENABLE_SWAGGER_UI=False